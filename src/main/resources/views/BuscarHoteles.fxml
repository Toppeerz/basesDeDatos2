<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="679.0" prefWidth="654.0" style="-fx-background-color: #c5e9f8;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tuPaquete.TuControlador">
    <children>
        <Label alignment="CENTER" layoutX="283.0" layoutY="-3.0" style="-fx-font-size: 24; -fx-font-style: italic;" text="Filtrar Hoteles" />

        <VBox layoutX="20.0" layoutY="20.0" spacing="10">
   <children>
               <!-- Filtros para buscar hoteles -->
               <HBox prefHeight="99.0" prefWidth="600.0" spacing="10">
                  <children>
                      <VBox spacing="5">
                         <children>
                             <Label text="Instalaciones" />
                             <TextArea fx:id="instalacionesTextArea" prefHeight="100.0" prefWidth="200.0" />
                         </children>
                      </VBox>
      
                      <VBox spacing="5">
         <children>
                             <Label text="Precio Noche" />
                             <TextField fx:id="precioNocheTextField" prefWidth="100.0" />
         </children>
                      </VBox>
      
                      <VBox spacing="5">
         <children>
                             <Label text="Tipo Hotel" />
                             <ComboBox fx:id="tipoHotelComboBox" layoutY="20.0">
                        <!-- Opciones para el tipo de hotel -->
                    </ComboBox>
         </children>
                      </VBox>
                  </children>
               </HBox>
   
               <!-- Botón de buscar -->
               <Button onAction="#buscarHoteles" text="Buscar" />
   
               <!-- Tabla de hoteles -->
               <TableView fx:id="hotelesTableView" prefHeight="200.0" prefWidth="600.0">
                   <columns>
                       <TableColumn text="Nombre" />
                       <TableColumn text="Tipo" />
                       <TableColumn text="ID" />
                       <TableColumn text="Nivel de Habitación" />
                       <TableColumn text="Régimen Hospedaje" />
                       <!-- ... Otras columnas según tu estructura de datos del hotel ... -->
                   </columns>
               </TableView>
   
               <!-- Tabla de habitaciones disponibles -->
               <TableView fx:id="habitacionesDisponiblesTableView" prefHeight="200.0" prefWidth="600.0">
                   <columns>
                       <TableColumn text="Nombre Habitación" />
                       <TableColumn text="Tipo" />
                       <TableColumn text="ID" />
                       <TableColumn text="Nivel de Habitación" />
                       <TableColumn text="Régimen Hospedaje" />
                       <!-- ... Otras columnas según tu estructura de datos de la habitación ... -->
                   </columns>
               </TableView>
               <Button onAction="#volverAReserva" text="Volver a Reserva" />
   </children>
        </VBox>
    </children>
</AnchorPane>
